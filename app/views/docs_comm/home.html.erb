<% if logged_in? %>
  <div class="row">
  <div class="container">
    <aside class="col-md-8">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  </div>
  </div>
<% else %>
<div class="container">
  <div class="center jumbotron">
   <h1 id = "logo" >docs comm </h1>
   <br>
   <div class="row">
  　　<div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: '/') do |f| %>

      <%= f.email_field :email,:placeholder => "メールアドレス", class: 'form-control' %>

      
      <%= f.password_field :password, :placeholder => "パスワード", class: 'form-control' %>
      
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>ログイン状態を保持</span>
      <% end %>
      
　　<div id = "login">
      <%= f.submit "ログイン", class:  "btn btn-primary" %>
    </div>  
    <br>
    
    <hr>
    
    
    <%= link_to"(パスワードを忘れましたか？)", new_password_reset_path %>
    <% end %>

     </div>
  　</div>
  </div>

  <div class="center jumbotron">
     <p>アカウントをお持ちでないですか？<br> <%= link_to "登録する", signup_path %></p>
 </div>
 
 <% end %>