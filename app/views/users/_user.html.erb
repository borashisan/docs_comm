<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to user, method: :delete,
                                  data: { confirm: "このユーザーを削除してもよろしいですか" } do %>
        <i class="fa fa-trash-o fa-la" aria-hidden="true"></i>
      <% end %>
  <% end %>
</li>