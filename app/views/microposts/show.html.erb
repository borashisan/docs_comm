 <div class="container"> 
   <ol class="microposts">
     <%= render @micropost %>
   </ol>

    <h2>コメントを入力</h2>
<!--引数の順番は親、子-->
<%= form_for ([@micropost,@comment]) do |f| %>
    <%= render 'shared/error_messages',object: f.object %>
    <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title %><br/>
    </p>
    <p>
        <%= f.label :content %><br/>
        <%= f.text_area :content %><br/>
    </p>
    <p>
       <%= f.submit "送信" %>
    </p>
<% end %>
<h2>コメント一覧</h2>
<!--@article.commentsで該当する記事のコメント一覧を取得-->
<% @micropost.comments.each do |comment| %>
    <p>タイトル</p>
    <p><%= comment.title %></p>
    <p>内容</p>
    <p><%= comment.content %></p>
    <!--article_comment_pathヘルパーには親(micropost)と子(comment)を両方渡す-->
    <p><%= link_to '削除',micropost_comment_path(@micropost,comment),
                          method: :delete,data: {confirm: '削除してもよろしいですか？'} %></p>
<% end %>
</div>

 