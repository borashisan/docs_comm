<li id="micropost-<%= micropost.id %>">
 <% if controller_path == 'microposts' %>
  <%= link_to micropost.user do %> 
   <% if micropost.user.image? %>
    <%= image_tag micropost.user.image.url, :size =>'50x50' %>
   <% else %>
    <i class="fas fa-user-circle fa-2x"></i>
   <% end %>
  <span class="user"><%= micropost.user.name %></span>
  <% end %>
 <% else %>
  <%= link_to micropost do %> 
   <% if micropost.user.image? %>
    <%= image_tag micropost.user.image.url, :size =>'50x50' %>
   <% else %>
    <i class="fas fa-user-circle fa-2x"></i>
   <% end %>
  <span class="user"><%= micropost.user.name %></span>
  <% end %>
 <% end %>
  <span class="content"><iframe id="forms" width="500" height="490" frameborder="no" src=<%= micropost.content %>></iframe></span>
  <span class="timestamp">
    
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to micropost, method: :delete,
                                       data: { confirm: "削除してもよろしいですか" } do %>
      <i class="fas fa-trash-alt fa-2x"></i>
      <% end %>
    <% end %>
  </span>
  <div class="SNS"> 
     <%= link_to  "https://twitter.com/share?url=#{root_url}microposts/#{micropost.id}", 
                                title: 'Twitter', target: '_blank' do %>
        <i class="fab fa-twitter fa-2x"></i>
     <% end %> 
     <%= link_to  "https://line.me/R/msg/text/?#{root_url}microposts/#{micropost.id}", 
                                title: 'Line', target: '_blank' do %>
        <i class="fab fa-line fa-2x"></i>
     <% end %> 
  </div>
 </li>
 



