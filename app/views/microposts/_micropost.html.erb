<li id="micropost-<%= micropost.id %>">
  <% if controller_path == 'users' %>
   <% if @user.image? %>
    <%= image_tag @user.image.url, :size =>'50x50' %>
   <% else %>
    <%= image_tag("/images/icon/no-image.png") %>
   <% end %>
  <% elsif controller_path == 'docs_comm' %>
    <%= image_tag @micropost.user.image.url, :size =>'50x50' %>
  <% end %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><iframe id="forms" width="500" height="490" frameborder="no" src=<%= micropost.content %>></iframe></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to micropost, method: :delete,
                                       data: { confirm: "削除してもよろしいですか" } do %>
      <i class="fa fa-trash-o fa-2x" aria-hidden="true"></i>
      <% end %>
    <% end %>
  </span>
</li>